# Environment variables for OneTapStay
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL_MYSQL="mysql://username:password@localhost:3306/onetapstay"
# Alternative: PlanetScale connection string
# DATABASE_URL_MYSQL="mysql://username:password@aws.connect.psdb.cloud/onetapstay?sslaccept=strict"

DATABASE_URL_MONGO="mongodb://localhost:27017/onetapstay"
# Alternative: MongoDB Atlas connection string
# DATABASE_URL_MONGO="mongodb+srv://username:password@cluster.mongodb.net/onetapstay"

REDIS_URL="redis://localhost:6379"
# Alternative: Upstash Redis
# REDIS_URL="rediss://username:password@your-redis-url:6379"

# Authentication
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-chars"
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Stripe Payment Integration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Twilio SMS/OTP
TWILIO_SID="your_twilio_account_sid"
TWILIO_TOKEN="your_twilio_auth_token"
TWILIO_PHONE="+1234567890"

# Lock Vendor Integration (Replace with actual vendor)
LOCK_VENDOR_API_KEY="your_lock_vendor_api_key"
LOCK_VENDOR_BASE_URL="https://api.your-lock-vendor.com"

# Application Configuration
NODE_ENV="development"
PORT="5000"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:5000"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload (Optional)
UPLOAD_PROVIDER="local" # local | s3 | cloudinary
AWS_BUCKET_NAME=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""

# Logging and Monitoring (Optional)
LOG_LEVEL="info"
SENTRY_DSN=""